file = {:home/onur/WORK/library/pdfs{\_}new/pacific/dore{\_}etal{\_}2008{\_}PiO.pdf:pdf},
journal = {Progress in Oceanography},
keywords = {Diatoms,Nitrogen fixation,North Pacific Subtropical Gyre,Nutrient cycles,Particle flux,Phytoplankton blooms},
number = {1},
pages = {2--38},
title = {{Summer phytoplankton blooms in the oligotrophic North Pacific Subtropical Gyre: Historical perspective and recent observations}},
